# editorconfig.org

# top-most EditorConfig file
root = true

[*]
end_of_line = lf
indent_style = space
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true

[{*.less,*.css,*.js,*.json,*.yml,!node_modules/*,!asset/bower/*}]
indent_style = space
indent_size = 2

[{.csscombrc,.csslintrc,.jshintrc,.jscsrc}]
indent_style = space
indent_size = 2

[{*.php,!application/vendor/*.php,!system/*.php}]
indent_style = space
indent_size = 4

[.htaccess]
indent_style = tab
indent_size = 4
